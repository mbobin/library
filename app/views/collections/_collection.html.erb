<div class="row justify-content-center">
  <div class="col-10">
    <div class="card text-white bg-dark mt-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= collection.name %>
        </h5>
        <ul class="list-group list-group-flush">
          <% if collection.books.any? %>
            <% collection.books.each do |book| %>
              <li class="list-group-item bg-dark">
                <%= link_to(book.name, book_path(book), class: "text-white") %>
              </li>
            <% end %>
          <% else %>
            <li class="list-group-item bg-dark">No books here.</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
