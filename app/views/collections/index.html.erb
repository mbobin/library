<% @collections.each do |collection| %>
  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title">
        <%= collection.name %>
      </h5>
      <ul class="list-group list-group-flush">
        <% collection.books.each do |book| %>
          <li class="list-group-item">
            <%= link_to(book.name, book_path(book)) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
