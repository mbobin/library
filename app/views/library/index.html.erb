<div class="row justify-content-center mt-3">
  <div class="col-10">
    <% ClusterTags.each_category do |category| %>
      <div class="mt-2 text-justify">
        <% @cluster[category].to_a.each do |tag| %>
          <%= link_to(books_path(tag: tag["word"])) do %>
            <%= content_tag(:span, class: "badge badge-secondary mt-2 tag-#{category}") do %>
              <%= tag["word"] %>
              <%= content_tag(:span, tag["frequency"], class: "badge badge-light") %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
