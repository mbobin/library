<div class="mt-3">
  <%= form_with model: @book do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :isbn, "ISBN" %>
      <%= f.text_field :isbn, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :tags %>
      <%= f.select :tags, @book.tags, {}, { class: "form-control select2-tags-input", multiple: true } %>
    </div>

   <div class="form-group">
      <div class="form-check">
        <%= f.check_box :update_from_isbn, class: "form-check-input" %>
        <%= f.label :update_from_isbn, "Update from ISBN", class: "form-check-label" %>
      </div>
    </div>

    <%= f.submit "Update", class: "btn btn-secondary" %>
  <% end %>
</div>
