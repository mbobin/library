<div class="card text-white bg-dark">
  <div class="card-body">
    <h5 class="card-title">
      <%= book.title %>
    </h5>
    <h6 class="card-subtitle">by <%= book.author_names %> - <%= book.isbn %></h6>
    <p class="card-text small" title="<%= book.description %>" ><%= book.summarization %></p>
  </div>
  <div class="card-footer">
    <%= book.tag_badges %>
  </div>
</div>
